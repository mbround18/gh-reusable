<h3>Reusable Workflows</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Workflow Name</th>
    <th>Usage</th>
  </tr>
  <% workflows.forEach(wf => { %>
    <tr>
      <td><%= wf.name %></td>
      <td><%= wf.description %></td>
      <td><%= wf.workflow %></td>
      <td>
        <pre><code><%= wf.usage.replace('<OWNER>', owner).replace('<REPO>', repo).replace('<FILE>', wf.name).replace('<VERSION>', version) %></code></pre>
        <% if (wf.required.length > 0) { %>
          <strong>Required Inputs:</strong> <%= wf.required.join(', ') %><br>
        <% } %>
        <% if (wf.optional.length > 0) { %>
          <strong>Optional Inputs:</strong> <%= wf.optional.join(', ') %>
        <% } %>
      </td>
    </tr>
  <% }) %>
</table>

<h3>Reusable Actions</h3>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Usage</th>
  </tr>
  <% actions.forEach(a => { %>
    <tr>
      <td><%= a.name %></td>
      <td><%= a.description %></td>
      <td>
        <pre><code><%= a.usage.replace('<NAME>', a.name) %></code></pre>
        <% if (a.required.length > 0) { %>
          <strong>Required Inputs:</strong> <%= a.required.join(', ') %><br>
        <% } %>
        <% if (a.optional.length > 0) { %>
          <strong>Optional Inputs:</strong> <%= a.optional.join(', ') %>
        <% } %>
      </td>
    </tr>
  <% }) %>
</table>
