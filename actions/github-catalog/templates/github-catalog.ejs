            <% } %>
            <% if (a.optional.length > 0) { %>
              <strong>Optional Inputs:</strong>
              <% a.optional.forEach(input => { %>
                - <%= input %>
              <% }) %>
            <% } %>
          </code></pre>
      </td>
    </tr>
  <% }) %>
</table>
