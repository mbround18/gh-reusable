{
  "name": "semver-action",
  "version": "1.0.0",
  "description": "GitHub Action to increment semver based on tags, labels, and custom prefixes",
  "main": "index.js",
  "author": "mbround18",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "mock-fs": "^5.2.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "verbose": true
  }
}
